<!DOCTYPE html>
<html lang="HE" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title @ViewBag.StudentName</title>
    <link rel="icon" href="~/Content/Pic/Logo.png" type="image/x-icon" />
    @Styles.Render("~/Content/Css")
    <link rel="stylesheet" href="~/Content/Css/signature-pad.css">

</head>


<body class="text-right" style="background-color:#fdfdee">
    <a href="@Url.Action("Index", "Student")">
        <img src="~/Content/Pic/Logo.png" alt="דיקאנט לוגו" class="logo img-fluid d-block mx-auto " />
    </a>
    <h1 class="display-4 text-center">@ViewBag.Message</h1>
    <div class="container-fluid body-content mt-4">
        @RenderBody()
    </div>

    <!-- errorModal -->
    <div class="modal fade" id="errorModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header text-danger">
                    <h4 class="modal-title">שגיאה</h4>
                    <button type="button" class="close ml-0" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body text-danger text-center">
                    <p class="modal-body-text">לא כל השדות מלאים נא לתקן</p>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">סגירה</button>
                </div>

            </div>
        </div>
    </div>

    <!-- successModal -->
    <div class="modal fade" id="successModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header text-danger">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close ml-0" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body text-center">

                    <div id="signature-pad" class="signature-pad">
                        <div id="signature-pad--body">
                            <canvas></canvas>
                        </div>
                        <div class="signature-pad--footer">
                            <div class="description">Sign above</div>

                            <div class="signature-pad--actions">
                                <div>
                                    <button type="button" class="button clear" data-action="clear">Clear</button>
                                </div>
                                <div>
                                    <button type="button" class="button save" data-action="save-png">Save as PNG</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">סגירה</button>
                    <button type="button" class="btn btn-success" data-dismiss="modal">הגש מלגה</button>

                </div>

            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
           
        });

        function beforeSumbit() {
            var ok = checkMust();
            if (ok) // true - all filed are filed
            {
                $('#successModal').modal('show');
            }
            else {
                $('#errorModal').modal('show');
            }
            return ok;
        }

        $('#successModal').on('show.bs.modal', function (e) {
            console.log("modal open");
            console.log("signature-pad width: " + $('#signature-pad').width());
            console.log("signature-pad height: " + $('#signature-pad').outerHeight());
            resizeCanvas();
        });
    </script>
</body>
</html>


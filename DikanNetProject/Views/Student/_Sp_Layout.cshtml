<!DOCTYPE html>
<html lang="HE" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Content/Pic/Logo.png" type="image/x-icon" />
    @Styles.Render("~/Content/Css")
    @Styles.Render("~/Content/datepicker")
    @Styles.Render("~/Content/formSlider")
    <link rel="stylesheet" href="~/Content/Css/signature-pad.css">
    <link href="https://fonts.googleapis.com/css?family=Heebo&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>


<body class="text-right" style="background-image:url('../../Content/Pic/bg.jpg');background-size:cover;background-repeat:no-repeat;">
    <div class="col-12 text-center">
        <a href="@Url.Action("Index","Student")">
            <img src="~/Content/Pic/Logo.png" alt="דיקאנט לוגו" class="logo img-fluid " />
        </a>
    </div>
    <h1 class="display-4 text-center">@ViewBag.Message</h1>
    <div class="container-fluid body-content mt-4">
        @RenderBody()
    </div>

    <div class="container-fluid text-center mt-4 mb-5">
        @Html.ActionLink("חזרה", "Index", "Student", null, new { @class = "btn btn-outline-primary" })
        @Html.ActionLink("התנתק", "Disconnect", "Login", null, new { @class = "btn btn-outline-danger" })
    </div>





    <!-- errorModal -->
    <div class="modal fade" id="errorModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">שגיאה</h4>
                    <button type="button" class="close ml-0" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body text-danger text-center">
                    <p class="modal-body-text">לא כל השדות מלאים נא לתקן</p>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">סגירה</button>
                </div>

            </div>
        </div>
    </div>

    <!-- Response Modal -->
    <div class="modal fade" id="responseModal" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">@ViewBag.Response</h4>
                </div>

                <!-- Modal body -->
                <div class="modal-body text-success text-center">
                    <p class="modal-body-text">@ViewBag.Response</p>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <a href="@Url.Action("Index","Student")" class="btn btn-primary">
                        סגירה
                    </a>
                </div>

            </div>
        </div>
    </div>

    <!-- successModal -->
    <div class="modal fade" id="successModal" style="display:block;">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">אני מאשר שכלל הפרטים  שהזנתי נכונים</h4>
                    <button type="button" class="close ml-0" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body text-center">

                    <div id="signature-pad" class="signature-pad">
                        <div id="signature-pad--body">
                            <canvas></canvas>
                        </div>
                        <div class="signature-pad--footer">
                            <div class="description">חתום למעלה</div>
                        </div>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary mx-2" data-action="clear" onclick="clearSignature()">נקה</button>
                    <button type="button" class="btn btn-primary mx-2" data-dismiss="modal">סגירה</button>
                    <button id="submitSp" type="submit" class="btn btn-primary" name="uploadmethod">הגש מלגה</button>
                </div>

            </div>
        </div>
    </div>

    <!-- File Modal -->
    <div class="modal fade" id="fileModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header text-primary">
                    <h4 class="modal-title">קובץ שמור</h4>
                    <button type="button" class="close ml-0" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <embed src="" class="embed-file" type="image/jpeg" />
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">סגירה</button>
                </div>

            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/javascript")
    @Scripts.Render("~/bundles/signature_pad")
    @Scripts.Render("~/bundles/formSlider")
    @Scripts.Render("~/bundles/datepicker")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $('#successModal').css('display', 'none');
            if ('@ViewBag.ResOk' == 'True') $('#responseModal').modal('show');
             if('@ViewBag.ResOk' == 'Error') $('#errorModal').modal('show');
        });

    function beforeSumbit(spName) {
            /*var ok = false;
            if (spName != 'socio')
                ok = checkMust();
            else
                ok = true;*/
            ok = checkMust();

            if (ok) // true - all filed are filed
            {
                $('#successModal').modal('show');
                $('#submitSp').attr('onclick', 'return signatureSave("' + spName + '")');
            }
            else {
                $('#errorModal').modal('show');
            }
            return ok;
        }


    $('.btn-file').click(function () {
            $('#fileModal').modal('show');
            var pathfile = $(this).attr('name');
            var url = '@Url.Action("GetFile","File")' + '?pFilePath=' + pathfile;
            var type = pathfile.split('.').pop();
            //console.log(type);
            if (type == "pdf")
                type = "application/pdf";
            else
                type = "image/" + type;
            $('.embed-file').attr('type', type);
            $('.embed-file').attr('src', url);

        });

    </script>

</body>
</html>


<!DOCTYPE html>
<html lang="HE" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-site-verification" content="1c3ShL4Ty1mpEu-yehORhQNbIzY2g-KWY4bbPg2q73Y" />
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Content/Pic/Logo.png" type="image/x-icon" />
    <link href="https://fonts.googleapis.com/css?family=Heebo&display=swap" rel="stylesheet" type="text/css">
    @Styles.Render("~/Content/Css")
</head>
<body class="text-right" style="background-image:url('../../Content/Pic/bglogin.png');background-size:cover;background-repeat:no-repeat;">
    <a href="@Url.Action("Login", "Login")">
        <img src="~/Content/Pic/Logo.png" alt="דיקאנט לוגו" class="logo img-fluid d-block mx-auto " />
    </a>
    <h1 class="display-4 text-center">@ViewBag.Message</h1>
    <div class="container-fluid body-content mt-4">
        @RenderBody()
    </div>

    <!-- Modal -->
    <div class="modal fade" id="responseModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header @(ViewBag.ChangeColor == true ? "text-primary" : "text-danger")">
                    <h4 class="modal-title">@ViewBag.ModelTitle</h4>
                    <button type="button" class="close ml-0" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body @(ViewBag.ChangeColor == true ? "text-primary" : "text-danger") text-center">
                    @Html.Raw(@ViewBag.ModelMessageBody)
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary mr-2" data-dismiss="modal">סגירה</button>
                    @{ if (ViewBag.ChangeColor == true) { <a href="@Url.Action("Login","Login")" class="btn btn-primary">להתחברות</a> }}
                </div>

            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/javascript")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function ()
        {
            var status = "@ViewBag.Status";
            if (status == "False")
                $('#responseModal').modal('show');

        });

        
    </script>
</body>
</html>


@model DikanNetProject.Models.ResetPasswordModel

@{
    ViewBag.Title = "סיסמא חדשה";
    ViewBag.Message = "סיסמא חדשה";
    ViewBag.ModelTitle = "סיסמא חדשה";
    Layout = "~/Views/Login/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <p class="text-center">
        אנא הזן סיסמא חדשה
        <br />
        על הסיסמא להכיל לפחות 8 תווים אשר כוללים אות גדולה, אות קטנה ומספר
    </p>

    <div class="row container-fluid">
        @Html.HiddenFor(m=>m.ResetPasswordCode)
        <div class="row col-12 form-group justify-content-center text-center">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-sm-12 col-md-3 col-lg-2 col-xl-1" })
            <div class="col-sm-12 col-md-8 col-lg-6 col-xl-5">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(s => s.Password), id = @Html.NameFor(m => m.Password), type = "password", name = @Html.NameFor(m => m.Password) } })
            </div>
        </div>
        <div class="row col-12 form-group justify-content-center text-center ">
            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "col-sm-12 col-md-3 col-lg-2 col-xl-1" })
            <div class="col-sm-12 col-md-8 col-lg-6 col-xl-5">
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(s => s.ConfirmPassword), id = @Html.NameFor(m => m.ConfirmPassword), type = "password", name = @Html.NameFor(m => m.ConfirmPassword) } })
            </div>
        </div>
        <div class="col-12 form-group justify-content-center text-center ">
            <button type="submit" class="btn btn-primary" onclick="return checkPasswordsValid()">עדכון סיסמא</button>
        </div>
    </div>
}
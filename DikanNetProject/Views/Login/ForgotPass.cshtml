@model DikanNetProject.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "שכחתי סיסמא";
    ViewBag.Message = "שכחתי סיסמא";
    ViewBag.ModelTitle = "שחזור סיסמא";
    ViewBag.ModelMessageBody = "פרטיך נקלטו<br />במידה הפרטים נכונים נשלח אלייך מייל ובו פרטי שחזור סיסמא.";
    Layout = "~/Views/Login/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <p class="text-center">
        אנא הזן את הפרטים הרשומים במערכת <br />
        על מנת לשחזר את הסיסמא.
    </p>


    <div class="row container-fluid">
        <div class="row col-12 form-group justify-content-center text-center">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-sm-12 col-md-3 col-lg-2 col-xl-1" })
            <div class="col-sm-12 col-md-8 col-lg-6 col-xl-5">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control only-numbers",maxlength="9", placeholder = Html.DisplayNameFor(s => s.UserName), pattern = "[0-9]{9}", id = @Html.NameFor(m => m.UserName), type = "text", name = @Html.NameFor(m => m.UserName) } })
            </div>
        </div>
        <div class="row col-12 form-group justify-content-center text-center ">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-sm-12 col-md-3 col-lg-2 col-xl-1" })
            <div class="col-sm-12 col-md-8 col-lg-6 col-xl-5">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(s => s.Email), id = @Html.NameFor(m => m.Email), type = "email", name = @Html.NameFor(m => m.Email) } })
            </div>
        </div>
        <div class="col-12 form-group justify-content-center text-center ">
            <button type="submit" class="btn btn-primary" onclick="return checkValid()">שחזר סיסמא</button>
        </div>
    </div>
}
<script>
    
    function checkValid() {
       var id = $('#UserId').val();
        var email = $('#Email').val();
        if ((validId(id) && validEmail(email))) {
            $('#myModal').modal('show');
            return true;
        }
        //alert("false");
        return false;

    });
</script>


@using DataEntities;
@model IGrid<SpSocio>

@if (Model.Rows.Any())
{
    <tr class="bg-primary text-white">
        <td colspan="2"><b>ממוצע כללי</b></td>
        <td><b>@(Model.Rows.Average(row => row.Model.AvgIncome))</b></td>
        <td><b>@(Model.Rows.Average(row => row.Model.BankStatus))</b></td>
        <td><b>@(Model.Rows.Average(row => row.Model.NumOfPersons))</b></td>
        <td colspan="4"><b>ממוצע כללי</b></td>
    </tr>
}

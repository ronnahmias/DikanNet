@model IEnumerable<DataEntities.SpDefinition>

@{
    ViewBag.Title = "רשימת מלגות";
    Layout = "~/Views/Dikan/_Layout.cshtml";
}

<h2 class="mb-3 text-center text-md-right">@ViewBag.Title</h2>
<h5 class="mb-3 text-center text-md-right">@ViewBag.response</h5>
<div class="text-center text-md-right">
    @Html.ActionLink("הוספת מלגה חדשה", "CreateEditSp", null, new { @class = "btn btn-outline-primary" })
    @Html.ActionLink("רשימת מקומות התנדבות", "VolunteerList", null, new { @class = "btn btn-outline-primary" })
</div>
<h4 class="mt-3 text-center text-md-right">מלגות פעילות</h4>
<hr />
<div class="container-fluid">
    <div class="row bg-primary text-white py-3 d-none d-md-flex mt-4 text-center">
        <!--work sp-->
        <!--sp name-->
        <div class="col-md-2 col-lg-1">
            שם מלגה
        </div>
        <!--sp amount-->
        <div class="col-md-2 col-lg-1">
            גובה מלגה
        </div>
        <!--sp details-->
        <div class="d-none d-lg-inline col-lg-3">
            פרטי מלגה
        </div>
        <!--sp type-->
        <div class="col-md-2 col-lg-1">
            סוג מלגה
        </div>
        <!--open date-->
        <div class="col-md-2 col-lg-2">
            תאריך פתיחה
        </div>
        <!--dead line date-->
        <div class="col-md-2 col-lg-2">
            תאריך סגירה
        </div>
        <!--options-->
        <div class="col-md-2 col-lg-2">
            פעולות
        </div>
    </div>

    @foreach (var item in Model.Where(s => s.DateDeadLine > DateTime.Now).OrderByDescending(s => s.Type).ToList())
    {
        <div class="row py-3 border border-secondary text-center">
            <!--work sp-->
            <!--sp name-->
            <div class="col-md-2 col-lg-1">
                <span class="font-weight-bold d-inline-flex d-md-none">שם מלגה:</span>
                @item.ScholarshipName
            </div>
            <!--sp amount-->
            <div class="col-md-2 col-lg-1">
                <span class="font-weight-bold d-inline-flex d-md-none">גובה מלגה:</span>
                @item.ScholarshipAmount
            </div>
            <!--sp details-->
            <div class="d-none d-lg-inline col-lg-3">
                <span class="font-weight-bold d-inline-flex d-md-none">פרטי מלגה:</span>
                @item.ScholarshipDetails
            </div>
            <!--sp type-->
            <div class="d-none d-md-inline col-md-2 col-lg-1">
                <span class="font-weight-bold d-inline-flex d-md-none">סוג מלגה:</span>
                @item.Type
            </div>
            <!--open date-->
            <div class="col-md-2 col-lg-2">
                <span class="font-weight-bold d-inline-flex d-md-none">תאריך פתיחת הגשות:</span>
                @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.DateOpenScholarship))
            </div>
            <!--dead line date-->
            <div class="col-md-2 col-lg-2">
                <span class="font-weight-bold d-inline-flex d-md-none">תאריך סגירת הגשות:</span>
                @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.DateDeadLine))
            </div>
            <!--options-->
            <div class="col-md-2 col-lg-2">
                @Html.ActionLink("ערוך מלגה", "CreateEditSp", new { id = item.ScholarshipID }, new { @class = "btn btn-outline-primary" })
                @Html.ActionLink("צפייה בהגשות מלגה", "SubmitedSp", new { spId = item.ScholarshipID, spType = item.Type }, new { @class = "btn btn-outline-primary" })
            </div>
        </div>
    }

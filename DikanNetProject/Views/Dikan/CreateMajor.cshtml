@model DataEntities.Major

@{
    Layout = "~/Views/Dikan/_Layout.cshtml";
}

<h2 class="text-center text-md-right">@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(s => s.MajorId)

    <div class="form-group">
        @Html.LabelFor(model => model.MajorName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MajorName, new { htmlAttributes = new { @class = "form-control only-heb must" } })
            @Html.ValidationMessageFor(model => model.MajorName, "", new { @class = "text-danger" })
        </div>
    </div>

    @{ if (ViewBag.Title != "עדכון מגמה")
        {
            <div class="form-group">
                @Html.LabelFor(model => model.HeadMajor.HeadMajorId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HeadMajor.HeadMajorId, new { htmlAttributes = new { @class = "form-control must only-heb" } })
                    @Html.ValidationMessageFor(model => model.HeadMajor.HeadMajorId, "", new { @class = "text-danger" })
                </div>
            </div>
        }
        else
        {
            @Html.HiddenFor(model=>model.HeadMajor.HeadMajorId)
        }
    }

    <div class="form-group">
        @Html.LabelFor(model => model.HeadMajor.HeadMajorName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.HeadMajor.HeadMajorName, new { htmlAttributes = new { @class = "form-control only-heb must" } })
            @Html.ValidationMessageFor(model => model.HeadMajor.HeadMajorName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HeadMajor.HeadMajorEmail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.HeadMajor.HeadMajorEmail, new { htmlAttributes = new { @class = "form-control only-heb must" } })
            @Html.ValidationMessageFor(model => model.HeadMajor.HeadMajorEmail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 text-center text-md-right">
            <input type="submit" value="שמור" class="btn btn-outline-primary" onclick="return checkMust()"/>
            @Html.ActionLink("ביטול", "MajorsList", null, new { @class = "btn btn-outline-primary" })
        </div>
    </div>
</div>
}

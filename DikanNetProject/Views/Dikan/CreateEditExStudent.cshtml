@model DataEntities.SpException

@{
    ViewBag.Title = "הארכת זמן הגשת מלגה";
    Layout = "~/Views/Dikan/_Layout.cshtml";
}
<style>
    .chosen-container {
    max-width: 100%;
}
</style>
    <h2 class="text-center">@ViewBag.Title</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal container">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="form-group col-md-6 col-sm-6 col-12">
            @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-6 " })
            <div class="">
                @Html.DropDownListFor(model => model.UserId, ViewBag.StudentsList as SelectList, "", htmlAttributes: new { @class = "form-control chosen must", @data_placeholder = "בחר סטודנט" })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6 col-sm-6 col-12">
            @Html.LabelFor(model => model.SpId, htmlAttributes: new { @class = "control-label " })
            <div class="">
                @Html.DropDownListFor(model => model.SpId, ViewBag.SpList as SelectList, "", htmlAttributes: new { @class = "form-control chosen must", @data_placeholder = "בחר מלגה" })
                @Html.ValidationMessageFor(model => model.SpId, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
        

        <div class="form-group col-md-6 col-sm-6 col-12">
            @Html.LabelFor(model => model.LockDate, htmlAttributes: new { @class = "control-label" })
            <div class="">
                @Html.EditorFor(model => model.LockDate, new { htmlAttributes = new { @class = "form-control only-numbers must" } })
                @Html.ValidationMessageFor(model => model.LockDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center text-md-right">
            <div class="col-md-offset-2 col-10">
                <input type="submit" value="פתח מלגה" class="btn btn-outline-primary" onclick="return checkMust()"/>
                @Html.ActionLink("ביטול","ExceptionStudentList",null,new { @class="btn btn-outline-primary" })
            </div>
        </div>
    </div>
}
